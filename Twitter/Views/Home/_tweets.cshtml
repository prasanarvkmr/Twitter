@model List<Twitter.Models.Tweet>

    @{
        ViewBag.Title = "Tweets";
    }

<h4>Tweets</h4>
<hr/>

    @{
        if (Model != null)
        {
            <table class="table">
                <tr>
                    <th>
                        Message
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.TweetId }) |                           
                            @Html.ActionLink("Delete", "Delete", new { id = item.TweetId })
                        </td>*@
                    </tr>
                }

            </table>
        }
        else
        {
            <h4>Waiting for your first Tweet!</h4>
        }
    }

@model IEnumerable<Twitter.Models.Tweet>
<h1>Twitter Home Page</h1>

@section scripts{ 
    @Scripts.Render("~/Tweets")
}

@{
    var NoOfTweets = Model != null ? (int)Model.Count() : 0;
    var NoOfFollowing = ViewBag.Following != null ? (int)ViewBag.Following : 0;
    var NoOfFollowers = ViewBag.Followers != null ? (int)ViewBag.Followers : 0;
}
<div class="fluid-container">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-3">
            <p>
                <h4>Follow</h4>
                <input id="searchToFollow" type="text" placeholder="Search Person" class="form-control" />
            </p>

            <br />
            <p>
                <a id="NoOfTweets">@NoOfTweets</a> Tweets
            </p>
            <p>
                <a id="NoOfFollowing">@NoOfFollowing</a> Following
            </p>
            <p>
                <a id="NoOfFollowers">@NoOfFollowers</a> Followers
            </p>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9">
            <p>
                <h4>What are you doing</h4>
                <textarea id="tweetMsg" rows="4" style="max-width:100%;" cols="10" class=" col-lg-12 col-md-12 col-sm-12 col-xs-12 form-control"></textarea>
            </p>
            <button class="btn btn-default" id="btn_update">Update</button>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9" id="Tweets">
            <div >
                
                @Html.Partial("_tweets", @Model)
            </div>
        </div>
        
    </div>
</div>